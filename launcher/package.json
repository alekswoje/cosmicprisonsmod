{
  "name": "cosmicprisons-launcher",
  "version": "1.0.0",
  "private": true,
  "description": "Standalone launcher for CosmicPrisonsMod",
  "main": "dist/main/main.js",
  "type": "commonjs",
  "scripts": {
    "clean": "rimraf dist release",
    "build": "tsc -p tsconfig.json && node scripts/copy-renderer.mjs",
    "dev": "npm run build && electron .",
    "start": "electron .",
    "test": "vitest run",
    "test:watch": "vitest",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac zip",
    "dist:win": "npm run build && electron-builder --win zip"
  },
  "dependencies": {
    "extract-zip": "^2.0.1",
    "semver": "^7.7.1"
  },
  "devDependencies": {
    "@types/node": "^22.13.9",
    "@types/semver": "^7.5.8",
    "electron": "^35.1.3",
    "electron-builder": "^24.13.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.2",
    "vitest": "^2.1.8"
  },
  "build": {
    "appId": "com.cosmicprisons.launcher",
    "productName": "Cosmic Prisons Launcher",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "asar": true,
    "mac": {
      "target": [
        "zip"
      ],
      "category": "public.app-category.games"
    },
    "win": {
      "target": [
        "zip"
      ]
    },
    "extraMetadata": {
      "main": "dist/main/main.js"
    }
  }
}
